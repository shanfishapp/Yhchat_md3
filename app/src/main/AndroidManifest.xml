<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 音频播放权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    
    <!-- 文件下载权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    
    <!-- 存储权限用于保存图片和文件 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".CanaryApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YhchatCanary">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.YhchatCanary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 分区详情Activity -->
        <activity
            android:name=".ui.community.BoardDetailActivity"
            android:exported="false"
            android:label="云湖社区"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 创建文章Activity -->
        <activity
            android:name=".ui.community.CreatePostActivity"
            android:exported="false"
            android:label="发布文章"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 草稿箱Activity -->
        <activity
            android:name=".ui.community.DraftBoxActivity"
            android:exported="false"
            android:label="草稿箱"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 文章详情Activity -->
        <activity
            android:name=".ui.community.PostDetailActivity"
            android:exported="true"
            android:label="文章详情"
            android:theme="@style/Theme.YhchatCanary">
            
            <!-- 处理yunhu://深度链接 -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="yunhu" 
                      android:host="post-detail" />
            </intent-filter>
        </activity>
            
        <!-- WebView Activity -->
        <activity
            android:name=".ui.webview.WebViewActivity"
            android:exported="false"
            android:label="网页"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 设置 Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="设置"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- HTML 设置 Activity -->
        <activity
            android:name=".ui.settings.HtmlSettingsActivity"
            android:exported="false"
            android:label="HTML 设置"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 导航栏设置 Activity -->
        <activity
            android:name=".ui.settings.NavigationSettingsActivity"
            android:exported="false"
            android:label="导航栏管理"
            android:theme="@style/Theme.YhchatCanary" />

        <!-- 用户资料 Activity -->
        <activity
            android:name=".ui.profile.UserProfileActivity"
            android:exported="false"
            android:label="用户资料"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 群聊列表 Activity -->
        <activity
            android:name=".ui.community.GroupListActivity"
            android:exported="false"
            android:label="群聊列表"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 聊天添加 Activity -->
        <activity
            android:name=".ui.chat.ChatAddActivity"
            android:exported="true"
            android:label="添加聊天"
            android:theme="@style/Theme.YhchatCanary">
            
            <!-- 处理yunhu://chat-add深度链接 -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="yunhu" 
                      android:host="chat-add" />
            </intent-filter>
        </activity>
            
        <!-- 搜索 Activity -->
        <activity
            android:name=".ui.community.SearchActivity"
            android:exported="false"
            android:label="搜索"
            android:theme="@style/Theme.YhchatCanary" />
        <activity
            android:name=".ui.settings.ChangePasswordActivity"
            android:exported="false"
            android:label="更改密码"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 机器人信息 Activity -->
        <activity
            android:name=".ui.bot.BotInfoActivity"
            android:exported="false"
            android:label="机器人信息"
            android:theme="@style/Theme.YhchatCanary" />
            
        <!-- 综合搜索 Activity -->


        <activity
            android:name=".ui.search.ComprehensiveSearchActivity"
            android:exported="false"
            android:label="综合搜索"
            android:theme="@style/Theme.YhchatCanary" />

        <activity
            android:name=".ui.community.EditPostActivity"
            android:exported="false"
            android:label="编辑文章

"
            android:theme="@style/Theme.YhchatCanary" />
        <!-- 语音播放服务 -->
        <service
            android:name=".service.AudioPlayerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
            
        <!-- 文件下载服务 -->
        <service
            android:name=".service.FileDownloadService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>